    <div class="container">
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Edit Profile</button>

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Update Data</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-8">
                                <form method="post" action="PutProfile" class="form" enctype="multipart/form-data">
                                    <div class="wrap-input100 form-group">
                                        <input type="hidden" asp-for="user_name" class="input100 form-control" style="border-radius:25px;" placeholder="Username" required />
                                        <span asp-validation-for="user_name" class="text-danger"></span>
                                    </div>
                                    <div class="wrap-input100 form-group">
                                        <label>Name</label>
                                        <input type="text" asp-for="Name" class="input100 form-control" style="border-radius:25px;" placeholder="Username" required />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="wrap-input100 form-group">
                                        <label>Age</label>
                                        <input type="text" asp-for="age" class="input100 form-control" style="border-radius:25px;" placeholder="Username" required />
                                        <span asp-validation-for="age" class="text-danger"></span>
                                    </div>
                                    <div class="wrap-input100 form-group">
                                        <label>Image</label>
                                        <input type="file" asp-for="img" class="input100 form-control" style="border-radius:25px;" placeholder="Username" required />
                                        
                                    </div>
                                    <div class="row">
                                        <div class="modal-footer">
                                            <input type="submit" value="Save Changes" class="btn btn-info" style="margin-right:10px;" />
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>



                </div>

            </div>
        </div>

    </div>
    <br /><br />
    <div class="container">
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal1">Change Password</button>

        <!-- Modal -->
        <div class="modal fade" id="myModal1" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Update password</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-8">
                                <form method="post" action="changePass" class="form" enctype="multipart/form-data">
                                    <div class="wrap-input100 form-group">
                                        <input type="hidden" asp-for="user_name" class="input100 form-control" style="border-radius:25px;" placeholder="Username" required />
                                        <span asp-validation-for="user_name" class="text-danger"></span>
                                    </div>
                                    <div class="wrap-input100 form-group">
                                        <label>Old Password</label>
                                        <input type="password" name="oldPass" class="input100 form-control" style="border-radius:25px;" placeholder="Old Password" required />
                                    </div>
                                    <div class="wrap-input100 form-group">
                                        <label>password</label>
                                        <input type="password" asp-for="password" class="input100 form-control" style="border-radius:25px;" placeholder="New Password" required />
                                        <span asp-validation-for="password" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class="modal-footer">
                                            <input type="submit" value="Save Changes" class="btn btn-info" style="margin-right:10px;" />
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            <br />

                                        </div>

                                    </div>
