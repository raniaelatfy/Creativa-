@model Creativa.ModelView.UserRegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!Doctype HTML>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/Assets/HomeContent/css/login.component.css">
    <link rel="stylesheet" href="~/Assets/HomeContent/css/bootstrap.min.css">

    <meta charset="utf-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Assets/HomeContent/img/img-01.png" alt="IMG">
                </div>

                <form method="post" action="register" autocomplete="off" class="login100-form" enctype="multipart/form-data">

                    <span class="login100-form-title">
                        Member Login
                    </span>
                    <div class="wrap-input100 form-group">
                        <input type="text" asp-for="Username" class="input100 form-control" style="border-radius:25px;" placeholder="Username" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 form-group">
                        <input type="text" asp-for="Name" class="input100 form-control"
                               style="border-radius:25px;" placeholder="Name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 form-group">
                        <input type="email" asp-for="Email" class="input100 form-control"
                               style="border-radius:25px;" placeholder="Email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 form-group">
                        <input type="text" asp-for="age" class="input100 form-control"
                               style="border-radius:25px;" placeholder="Age" required />
                        <span asp-validation-for="age" class="text-danger"></span>
                    </div>


                    <div class="wrap-input100 form-group ">
                        <input type="password" asp-for="Password" class="form-control"
                               style="border-radius:25px;" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="wrap-input100 form-group ">
                        <input type="password" asp-for="ConfirmPassword" class="form-control"
                               style="border-radius:25px;" placeholder="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>
                    <div class="wrap-input100 custom-file ">
                        @*<input type="file" asp-for="img" class="custom-file"
                            style="border-radius:25px;" placeholder="Image" />*@
                        <input asp-for="img" class="custom-file-input" id="customFile" accept="image/*" />

                        <span asp-validation-for="img" class="text-danger"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Register
                        </button>
                    </div>
                    @if (ViewBag.valid != null)
                    {
                        <p class="text-danger">@ViewBag.valid</p>
                    }
                    @if (ViewBag.enterdata != null)
                    {
                        <p class="text-danger">@ViewBag.enterdata</p>
                    }
                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a asp-action="register" class="txt2">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/Assets/HomeContent/js/jquery.min.js"></script>
    <script src="~/Assets/HomeContent/js/bootstrap.min.js"></script>
    @*<script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>*@
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

</body>
</html>
